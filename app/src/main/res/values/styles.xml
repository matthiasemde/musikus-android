<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionMode" parent="">
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
        <item name="titleTextStyle">@style/ActionModeTitle</item>
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="ActionModeCloseButton">
        <item name="android:src">@drawable/ic_nav_back</item>
        <item name="android:tint">?attr/colorOnSurfaceLowerContrast</item>
    </style>

    <style name="ActionModeTitle"   parent="">
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/outlined_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="heading_about_pages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="text_about_pages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="text_about_pages_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
    </style>

    <style name="about_entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingStart">69dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="about_entry_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">69dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">?attr/colorOnSurfaceLowerContrast</item>
    </style>

</resources>
